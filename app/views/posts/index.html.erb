<div class="user-index">
  <div class='profile'>
    <img src="<%= @user.photo %>" alt="User Photo" />
  </div>
  <div class='name-postnumber'>
    <div><%= @user.name %></div>
    <p class='num-post'>Number of posts: <%= @user.posts.count %></p>
  </div>
</div>

<div class="post-index">
  <div class="post-inner">
    <% if @posts.present? %>
      <% @posts.each_with_index do |post, index| %>
        <%= link_to "Post ##{index + 1}", user_post_path(@user.id, post.id) %>
        <div class="delete-post">
        <% if can? :destroy, @post %>
        <%= form_with url: user_post_path(@post.author, @post), method: :delete do |form| %>
          <%= form.submit 'Delete post', data: { confirm: 'Are you sure?' }, class: "delete-button btn" %>
        <% end %>
      <% end %>
          </div>  

        <p><%= post.text %></p>
        <div class="counter">
          <p><%= "Comments: #{post.comments.count}, " %><%= "Likes: #{pluralize(post.likes.count, 'like')}" %></p>
        </div>
        <section class='comments'>
  <% if post.recent_comments.present? %>
    <% post.recent_comments.each do |comment| %>
      <p><%= comment.user.name %>: <%= comment.text %></p>
      <% if can? :destroy, comment %>
        <%= form_with url: user_post_comment_path(@post.author, @post, comment), method: :delete do |form| %>
          <%= form.submit 'Delete Comment', data: { confirm: 'Are you sure?' } %>
        <% end %>
      <% end %>
    <% end %>
  <% else %>
    <p>No recent comments.</p>
  <% end %>
</section>
      <% end %>
     
    <% else %>
      <p>No posts available.</p>
    <% end %>
  </div>
</div>
<div class="pagination">
<a href="/"><button type="button"><%= will_paginate %></button></a>
</div>

